          {% if section.settings.lifestyle_caption != blank %}
            <p class="style-landing__lifestyle-caption">{{ section.settings.lifestyle_caption }}</p>
          {% endif %}
        </div>
      </div>
    </section>
  {% endif %}

  {%- comment -%} ===== AVAILABLE PRODUCTS ===== {%- endcomment -%}
  {% if section.settings.products_collection != blank %}
    <section class="style-landing__products">
      <div class="page-width">
        <h2 class="style-landing__section-heading">{{ section.settings.products_heading | default: 'Available Products' }}</h2>
        {% if section.settings.products_subtitle != blank %}
          <p class="style-landing__section-subtitle">{{ section.settings.products_subtitle }}</p>
        {% endif %}
        {%- assign product_ratio = section.settings.products_image_ratio -%}
        <div class="style-landing__products-carousel-wrapper">
          <button type="button" class="style-landing__carousel-btn style-landing__carousel-btn--prev" aria-label="Previous products" data-carousel-prev>‚Äπ</button>
          <div class="style-landing__products-carousel" data-products-carousel>
            {% for product in section.settings.products_collection.products limit: section.settings.products_limit %}
              <div class="style-landing__product-card">
                <a href="{{ product.url }}" class="style-landing__product-link">
                  {% if product.featured_image != blank %}
                    <div class="style-landing__product-media{% if product_ratio != 'natural' %} style-landing__product-media--{{ product_ratio }}{% endif %}">
                      {{ product.featured_image | image_url: width: 400 | image_tag:
                        alt: product.title,
                        loading: 'lazy',
                        widths: '200, 300, 400',
                        class: 'style-landing__product-img'
                      }}
                    </div>
                  {% endif %}
                  <h3 class="style-landing__product-title">{{ product.title }}</h3>
                  <p class="style-landing__product-price">{{ product.price | money }}</p>
                </a>
              </div>
            {% endfor %}
          </div>
          <button type="button" class="style-landing__carousel-btn style-landing__carousel-btn--next" aria-label="Next products" data-carousel-next>‚Ä∫</button>
          <div class="style-landing__carousel-dots" data-carousel-dots aria-hidden="true"></div>
        </div>
      </div>
    </section>
  {% endif %}

