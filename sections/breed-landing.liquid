              {% if block.settings.gift_icon != blank %}
                <span class="breed-landing__gift-icon" aria-hidden="true">{{ block.settings.gift_icon }}</span>
              {% endif %}
              <div>
                <strong>{{ block.settings.gift_title }}</strong>
                {% if block.settings.gift_description != blank %}
                  <div class="breed-landing__gift-description rte">
                    {{ block.settings.gift_description }}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
        {% if section.settings.gifts_closing != blank %}
          <div class="breed-landing__gifts-closing">
            <p>{{ section.settings.gifts_closing }}</p>
          </div>
        {% endif %}
