<nav 
  class="ks-breadcrumb-nav" 
  aria-label="{{ 'kondasoft.breadcrumbs.label' | t }}">
  <ol class="ks-breadcrumb">
    <li class="ks-breadcrumb-item">
      <a href="{{ routes.root_url }}">
        {{ 'kondasoft.breadcrumbs.home' | t }}
      </a>
    </li>
    {% case request.page_type %}
      {% when 'list-collections' %}
        <li class="ks-breadcrumb-item active" aria-current="page">
          {{ section.settings.title }}
        </li>
      {% when 'collection' %}
        <li class="ks-breadcrumb-item">
          {{ 'kondasoft.breadcrumbs.collections' | t | link_to: routes.collections_url }}
        </li>
        {% if current_tags %}
          <li class="ks-breadcrumb-item">
            {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
            {{ collection.title | link_to: url }}
          </li>
          <li class="ks-breadcrumb-item active" aria-current="page">
            {{ current_tags | join: ', ' | capitalize }}
          </li>
        {% else %}
          <li class="ks-breadcrumb-item active" aria-current="page">
            {{ collection.title }}
          </li>
        {% endif %}
      {% when 'product' %}
        {% if collection %}
          <li class="ks-breadcrumb-item">
            {{ collection.title | link_to: collection.url }}
          </li>
          <li class="ks-breadcrumb-item active" aria-current="page">
            {{ product.title }}
          </li>
        {% else %}
          <li class="ks-breadcrumb-item active" aria-current="page">
            {{ product.title }}
          </li>
        {% endif %}
      {% when 'blog' %}
        {% if current_tags %}
          <li class="ks-breadcrumb-item">
            {{ blog.title | link_to: blog.url }}
          </li>
          <li class="ks-breadcrumb-item active" aria-current="page">
            {{ current_tags | join: ', ' | capitalize }}
          </li>
        {% else %}
          <li class="ks-breadcrumb-item active" aria-current="page">
            {{ blog.title }}
          </li>
        {% endif %}
      {% when 'article' %}
        <li class="ks-breadcrumb-item">
          {{ blog.title | link_to: blog.url }}
        </li>
        <li class="ks-breadcrumb-item active" aria-current="page">
          {{ article.title }}
        </li>
      {% when 'page' %}
        <li class="ks-breadcrumb-item active" aria-current="page">
          {{ page.title }}
        </li>
    {% endcase %}
  </ol>
</nav>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "{{ 'kondasoft.breadcrumbs.home' | t }}",
        "item": "{{ request.origin | append: routes.root_url  }}"
      },
      {% case request.page_type %}
        {% when 'list-collections' %}
          {
            "@type": "ListItem",
            "position": 2,
            "name": "{{ section.settings.title }}"
          }
        {% when 'collection' %}
          {
            "@type": "ListItem",
            "position": 2,
            "name": "{{ 'kondasoft.breadcrumbs.collections' | t }}",
            "item": "{{ request.origin | append: routes.collections_url  }}"
          },
          {% if current_tags %}
            {
              "@type": "ListItem",
              "position": 3,
              "name": "{{ collection.title }}",
              "item": "{{ request.origin | append: '/collections/' | append: collection.handle  }}"
            },
            {
              "@type": "ListItem",
              "position": 4,
              "name": "{{ current_tags | join: ', ' | capitalize }}"
            }
          {% else %}
            {
              "@type": "ListItem",
              "position": 3,
              "name": "{{ collection.title }}"
            }
          {% endif %}
        {% when 'product' %}
          {% if collection %}
            {
              "@type": "ListItem",
              "position": 2,
              "name": "{{ collection.title }}",
              "item": "{{ request.origin | append: collection.url  }}"
            },
            {
              "@type": "ListItem",
              "position": 3,
              "name": "{{ product.title }}",
            }
          {% else %}
            {
              "@type": "ListItem",
              "position": 2,
              "name": "{{ product.title }}",
            }
          {% endif %}
        {% when 'blog' %}
          {% if current_tags %}
            {
              "@type": "ListItem",
              "position": 2,
              "name": "{{ blog.title }}",
              "item": "{{ request.origin | append: blog.url }}'  }}"
            },
            {
              "@type": "ListItem",
              "position": 3,
              "name": "{{ current_tags | join: ', ' | capitalize }}"
            }
          {% else %}
            {
              "@type": "ListItem",
              "position": 2,
              "name": "{{ blog.title }}"
            }
          {% endif %}
        {% when 'article' %}
          {
            "@type": "ListItem",
            "position": 2,
            "name": "{{ blog.title }}",
            "item": "{{ request.origin | append: blog.url }}'  }}"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "{{ article.title }}"
          }
        {% when 'page' %}
          {
            "@type": "ListItem",
            "position": 2,
            "name": "{{ page.title }}"
          }
      {% endcase %}
    ]
  }
</script>