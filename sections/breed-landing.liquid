<script>
  (function() {
    var wrappers = document.querySelectorAll('.breed-landing__products-carousel-wrapper');
    for (var i = 0; i < wrappers.length; i++) {
      (function(wrapper) {
        var carousel = wrapper.querySelector('[data-products-carousel]');
        var prevBtn = wrapper.querySelector('[data-carousel-prev]');
        var nextBtn = wrapper.querySelector('[data-carousel-next]');
        if (!carousel) return;

        var gap = 20;
        var scrollAmount = function() {
          var card = carousel.querySelector('.breed-landing__product-card');
          return card ? card.offsetWidth + gap : 220;
        };

        var updateButtons = function() {
          var atStart = carousel.scrollLeft <= 4;
          var atEnd = carousel.scrollLeft + carousel.offsetWidth >= carousel.scrollWidth - 4;
          prevBtn.style.display = atStart ? 'none' : '';
          nextBtn.style.display = atEnd ? 'none' : '';
        };

        prevBtn.addEventListener('click', function() {
          carousel.scrollBy({ left: -scrollAmount(), behavior: 'smooth' });
        });
        nextBtn.addEventListener('click', function() {
          carousel.scrollBy({ left: scrollAmount(), behavior: 'smooth' });
        });

        carousel.addEventListener('scroll', updateButtons);
        window.addEventListener('resize', updateButtons);
        updateButtons();

        // Mobile scroll dots
        var dotsContainer = wrapper.querySelector('[data-carousel-dots]');
        if (dotsContainer) {
          var cards = carousel.querySelectorAll('.breed-landing__product-card');
          if (cards.length > 0) {
            var visibleW = carousel.offsetWidth;
            var totalGroups = Math.max(1, Math.ceil((carousel.scrollWidth - visibleW) / visibleW) + 1);

            if (totalGroups <= 1) {
              dotsContainer.style.display = 'none';
            } else {
              for (var d = 0; d < totalGroups; d++) {
                var dot = document.createElement('span');
                dot.className = 'breed-landing__carousel-dot' + (d === 0 ? ' breed-landing__carousel-dot--active' : '');
                dotsContainer.appendChild(dot);
              }

              var dots = dotsContainer.querySelectorAll('.breed-landing__carousel-dot');
              carousel.addEventListener('scroll', function() {
                var maxScroll = carousel.scrollWidth - carousel.offsetWidth;
                var scrollFraction = maxScroll > 0 ? carousel.scrollLeft / maxScroll : 0;
                var activeIdx = Math.round(scrollFraction * (dots.length - 1));
                activeIdx = Math.max(0, Math.min(activeIdx, dots.length - 1));
                for (var j = 0; j < dots.length; j++) {
                  if (j === activeIdx) {
                    dots[j].classList.add('breed-landing__carousel-dot--active');
                  } else {
                    dots[j].classList.remove('breed-landing__carousel-dot--active');
                  }
                }
              });
            }
          }
        }
      })(wrappers[i]);
    }
  })();
</script>

