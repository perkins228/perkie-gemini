{% doc %}
  @prompt
    related products 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-related-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-related-products-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-related-products-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.products_spacing }}px;
  }

  .ai-related-products-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0;
    color: rgb(var(--color-foreground));
    font-family: var(--font-heading-family);
  }

  .ai-related-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ settings.spacing_grid_horizontal }}px {{ settings.spacing_grid_vertical }}px;
  }

  .ai-related-product-card-{{ ai_gen_id }} {
    position: relative;
    background: rgb(var(--color-background));
    border-radius: {{ settings.card_corner_radius }}px;
    {% if settings.card_style == 'card' %}
      border: {{ settings.card_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.card_border_opacity | divided_by: 100.0 }});
      {% if settings.card_shadow_opacity > 0 %}
        box-shadow: {{ settings.card_shadow_horizontal_offset }}px {{ settings.card_shadow_vertical_offset }}px {{ settings.card_shadow_blur }}px rgba(var(--color-shadow), {{ settings.card_shadow_opacity | divided_by: 100.0 }});
      {% endif %}
      padding: {{ settings.spacing_grid_horizontal }}px;
    {% endif %}
    transition: transform 0.3s ease;
  }

  .ai-related-product-card-{{ ai_gen_id }}:hover {
    {% if settings.animations_hover_elements == 'vertical-lift' %}
      transform: translateY(-4px);
    {% elsif settings.animations_hover_elements == '3d-lift' %}
      transform: translateY(-4px) scale(1.02);
    {% endif %}
  }

  .ai-related-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_ratio }};
    margin-bottom: {{ settings.spacing_grid_vertical }}px;
    border-radius: {{ settings.media_radius }}px;
    overflow: hidden;
    {% if settings.media_border_thickness > 0 %}
      border: {{ settings.media_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.media_border_opacity | divided_by: 100.0 }});
    {% endif %}
    {% if settings.media_shadow_opacity > 0 %}
      box-shadow: {{ settings.media_shadow_horizontal_offset }}px {{ settings.media_shadow_vertical_offset }}px {{ settings.media_shadow_blur }}px rgba(var(--color-shadow), {{ settings.media_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-related-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-related-product-card-{{ ai_gen_id }}:hover .ai-related-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-related-product-badge-{{ ai_gen_id }} {
    position: absolute;
    {{ settings.badge_position }}: 8px;
    background: rgb(var(--color-badge-foreground));
    color: rgb(var(--color-badge-background));
    padding: 4px 8px;
    border-radius: {{ settings.badge_corner_radius }}px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }

  .ai-related-product-info-{{ ai_gen_id }} {
    text-align: {{ settings.card_text_alignment }};
  }

  .ai-related-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px;
    color: rgb(var(--color-foreground));
    text-decoration: none;
    display: block;
    line-height: 1.3;
  }

  .ai-related-product-title-{{ ai_gen_id }}:hover {
    color: rgb(var(--color-link));
  }

  .ai-related-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    margin-bottom: 12px;
    color: rgb(var(--color-foreground));
  }

  .ai-related-product-price-sale-{{ ai_gen_id }} {
    color: rgb(var(--color-sale-text));
  }

  .ai-related-product-price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.7;
    margin-left: 8px;
  }

  .ai-related-product-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border: {{ settings.buttons_border_thickness }}px solid rgba(var(--color-button), {{ settings.buttons_border_opacity | divided_by: 100.0 }});
    border-radius: {{ settings.buttons_radius }}px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    {% if settings.buttons_shadow_opacity > 0 %}
      box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba(var(--color-shadow), {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-related-product-button-{{ ai_gen_id }}:hover {
    background: rgba(var(--color-button), 0.8);
    transform: translateY(-1px);
  }

  .ai-related-products-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: rgba(var(--color-foreground), 0.6);
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-related-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-related-products-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-related-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-related-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-related-products-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
  <div class="ai-related-products-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-related-products-header-{{ ai_gen_id }}">
        <h2 class="ai-related-products-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% liquid
      assign related_products = blank
      
      if block.settings.recommendation_type == 'automatic'
        assign related_products = product.related_products | default: recommendations.products
      elsif block.settings.recommendation_type == 'collection' and block.settings.products_collection != blank
        assign related_products = block.settings.products_collection.products
      elsif block.settings.recommendation_type == 'manual' and block.settings.manual_products != blank
        assign related_products = block.settings.manual_products
      endif

      if related_products.size > 0
        assign products_to_show = related_products | slice: 0, block.settings.products_limit
      endif
    %}

    {% if products_to_show.size > 0 %}
      <div class="ai-related-products-grid-{{ ai_gen_id }}">
        {% for related_product in products_to_show %}
          {% unless related_product.id == product.id %}
            <div class="ai-related-product-card-{{ ai_gen_id }}">
              <div class="ai-related-product-image-wrapper-{{ ai_gen_id }}">
                {% if related_product.featured_image %}
                  <img
                    src="{{ related_product.featured_image | image_url: width: 600 }}"
                    alt="{{ related_product.featured_image.alt | escape }}"
                    class="ai-related-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | divided_by: related_product.featured_image.aspect_ratio | round }}"
                  >
                {% else %}
                  <div class="ai-related-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if related_product.compare_at_price > related_product.price %}
                  <span class="ai-related-product-badge-{{ ai_gen_id }} color-{{ settings.sale_badge_color_scheme }}">
                    Sale
                  </span>
                {% elsif related_product.available == false %}
                  <span class="ai-related-product-badge-{{ ai_gen_id }} color-{{ settings.sold_out_badge_color_scheme }}">
                    Sold out
                  </span>
                {% endif %}
              </div>

              <div class="ai-related-product-info-{{ ai_gen_id }}">
                <a href="{{ related_product.url }}" class="ai-related-product-title-{{ ai_gen_id }}">
                  {{ related_product.title }}
                </a>

                {% if block.settings.show_price %}
                  <div class="ai-related-product-price-{{ ai_gen_id }}">
                    {% if related_product.compare_at_price > related_product.price %}
                      <span class="ai-related-product-price-sale-{{ ai_gen_id }}">
                        {{ related_product.price | money }}
                      </span>
                      <span class="ai-related-product-price-compare-{{ ai_gen_id }}">
                        {{ related_product.compare_at_price | money }}
                      </span>
                    {% else %}
                      {{ related_product.price | money }}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_button %}
                  <a href="{{ related_product.url }}" class="ai-related-product-button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-related-products-empty-{{ ai_gen_id }}">
        {% if block.settings.recommendation_type == 'collection' and block.settings.products_collection == blank %}
          Select a collection to display related products
        {% elsif block.settings.recommendation_type == 'manual' and block.settings.manual_products == blank %}
          Select products to display as related items
        {% else %}
          No related products found
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

