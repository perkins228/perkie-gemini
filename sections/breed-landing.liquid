<div class="breed-landing" style="--breed-accent: {{ section.settings.accent_color }}; --breed-accent-light: {{ section.settings.accent_color }}1a;">

  {%- comment -%} ===== HERO ===== {%- endcomment -%}
  <section class="breed-landing__hero">
    <div class="page-width breed-landing__hero-inner">
      <div class="breed-landing__hero-content">
        {% if section.settings.eyebrow_text != blank %}
          <p class="breed-landing__eyebrow">{{ section.settings.eyebrow_text }}</p>
        {% endif %}
        <h1 class="breed-landing__title">
          {{ section.settings.heading | default: page.title }}
        </h1>
        {% if section.settings.subtitle != blank %}
          <p class="breed-landing__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        <div class="breed-landing__hero-ctas">
          <a href="{{ section.settings.cta_url | default: '/pages/custom-image-processing' }}" class="breed-landing__cta-primary button button--primary">
            {{ section.settings.cta_text | default: 'See Your Pet in Every Style ‚Äî Free' }}
          </a>
          {% if section.settings.secondary_cta_text != blank %}
            <a href="{{ section.settings.secondary_cta_url }}" class="breed-landing__cta-secondary">
              {{ section.settings.secondary_cta_text }} ‚Üí
            </a>
          {% endif %}
        </div>
        <p class="breed-landing__hero-trust">{{ section.settings.trust_text | default: 'No account needed ¬∑ Takes less than 60 seconds ¬∑ 100% free' }}</p>
      </div>
      <div class="breed-landing__hero-media">
        {% if section.settings.hero_image != blank %}
          {%- assign hero_ratio = section.settings.hero_image_ratio -%}
          <div class="breed-landing__hero-media-inner{% if hero_ratio != 'natural' %} breed-landing__hero-media-inner--{{ hero_ratio }}{% endif %}">
            {{ section.settings.hero_image | image_url: width: 800 | image_tag:
              alt: section.settings.hero_image_alt,
              loading: 'eager',
              widths: '400, 600, 800',
              class: 'breed-landing__hero-img'
            }}
          </div>
          {% if section.settings.show_before_after_badge %}
            <span class="breed-landing__badge">Before ‚Üí After</span>
          {% endif %}
        {% else %}
          <div class="breed-landing__placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </section>

  {%- comment -%} ===== FREE PREVIEW BANNER ===== {%- endcomment -%}
  <section class="breed-landing__preview-banner">
    <div class="page-width">
      <div class="breed-landing__preview-banner-inner">
        <div class="breed-landing__preview-icon">‚ú®</div>
        <div class="breed-landing__preview-text">
          <strong>{{ section.settings.preview_banner_heading | default: 'Free Instant Preview' }}</strong>
          <span>{{ section.settings.preview_banner_text | default: 'Upload your photo and preview every style instantly. Completely free.' }}</span>
        </div>
        <a href="{{ section.settings.cta_url | default: '/pages/custom-image-processing' }}" class="button button--secondary breed-landing__preview-btn">
          Try It Free
        </a>
      </div>
    </div>
  </section>

  {%- comment -%}
    ===== PAGE BODY CONTENT (from Shopify page editor) =====
    NOTE: Do NOT use H1 in the page body content ‚Äî H1 is already rendered
    from the section heading above. Use H2 and below only.
  {%- endcomment -%}
  {% if page.content != blank %}
    <section class="breed-landing__body">
      <div class="page-width">
        <div class="breed-landing__body-content rte">
          {{ page.content }}
        </div>
      </div>
    </section>
  {% endif %}

  {%- comment -%} ===== STYLE RECOMMENDATIONS ===== {%- endcomment -%}
  {% assign style_blocks = section.blocks | where: 'type', 'style_recommendation' %}
  {% if style_blocks.size > 0 %}
    <section class="breed-landing__styles">
      <div class="page-width">
        <h2 class="breed-landing__section-heading">{{ section.settings.styles_heading | default: 'Recommended Styles' }}</h2>
        {% if section.settings.styles_subtitle != blank %}
          <p class="breed-landing__section-subtitle">{{ section.settings.styles_subtitle }}</p>
        {% endif %}
        <div class="breed-landing__styles-grid">
          {% for block in style_blocks %}
            <a href="{{ block.settings.style_url }}" class="breed-landing__style-card" {{ block.shopify_attributes }}>
              {% if block.settings.style_image != blank %}
                <div class="breed-landing__style-card-media">
                  {{ block.settings.style_image | image_url: width: 400 | image_tag:
                    alt: block.settings.style_name,
                    loading: 'lazy',
                    widths: '200, 300, 400',
                    class: 'breed-landing__style-card-img'
                  }}
                </div>
              {% endif %}
              <div class="breed-landing__style-card-content">
                <h3>{{ block.settings.style_name }}</h3>
                {% if block.settings.style_tag != blank %}
                  <span class="breed-landing__style-tag">{{ block.settings.style_tag }}</span>
                {% endif %}
                {% if block.settings.style_description != blank %}
                  <p>{{ block.settings.style_description }}</p>
                {% endif %}
              </div>
            </a>
          {% endfor %}
        </div>
        <div class="breed-landing__styles-cta">
          <a href="{{ section.settings.cta_url | default: '/pages/custom-pet-portrait-styles' }}" class="button button--primary">
            {{ section.settings.styles_cta_text | default: 'Preview All Styles Free' }}
          </a>
        </div>
      </div>
    </section>
  {% endif %}

  {%- comment -%} ===== PHOTO TIPS ===== {%- endcomment -%}
  {% assign tip_blocks = section.blocks | where: 'type', 'photo_tip' %}
  {% if tip_blocks.size > 0 %}
    <section class="breed-landing__tips">
      <div class="page-width">
        <h2 class="breed-landing__section-heading">{{ section.settings.tips_heading | default: 'Photo Tips' }}</h2>
        <div class="breed-landing__tips-grid">
          {% for block in tip_blocks %}
            <div class="breed-landing__tip" {{ block.shopify_attributes }}>
              {% if block.settings.tip_icon != blank %}
