            type="submit"
            id="CartDrawer-Checkout"
            class="cart__checkout-button button"
            name="checkout"
            form="CartDrawer-Form"
            {% if cart == empty %}
              disabled
            {% endif %}
          >
            {{ 'sections.cart.checkout' | t }}
          </button>
        </div>

        {% comment %} KondaSoft {% endcomment %}
        {% render 'ks-cart-continue-shopping-btn' %}
        {% render 'ks-cart-payment-icons' %}
        {% comment %} /KondaSoft {% endcomment %}
      </div>
    </div>
  </div>
