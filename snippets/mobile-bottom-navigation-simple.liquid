{%- comment -%}
  Simplified Mobile Bottom Navigation
  Basic bottom navigation that works WITH Shopify Dawn, not against it
  
  Usage:
  {% render 'mobile-bottom-navigation-simple' %}
{%- endcomment -%}

<simple-mobile-navigation class="mobile-bottom-nav">
  <nav class="mobile-nav-bar" role="navigation" aria-label="{{ 'general.navigation.mobile' | t }}">
    {%- comment -%} Home {%- endcomment -%}
    <a href="{{ routes.root_url }}" class="mobile-nav-item" data-nav-id="home">
      <span class="mobile-nav-icon">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
      </span>
      <span class="mobile-nav-label">{{ 'general.navigation.home' | t | default: 'Home' }}</span>
    </a>
    
    {%- comment -%} Shop {%- endcomment -%}
    <a href="{{ routes.all_products_collection_url }}" class="mobile-nav-item" data-nav-id="shop">
      <span class="mobile-nav-icon">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
      </span>
      <span class="mobile-nav-label">{{ 'general.navigation.shop' | t | default: 'Shop' }}</span>
    </a>
    
    {%- comment -%} Pet Upload {%- endcomment -%}
    <a href="/pages/pet-background-remover" class="mobile-nav-item" data-nav-id="upload">
      <span class="mobile-nav-icon">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </span>
      <span class="mobile-nav-label">{{ 'general.navigation.upload_pet' | t | default: 'Upload Pet' }}</span>
    </a>
    
    {%- comment -%} My Pets {%- endcomment -%}
    <a href="/pages/my-pets" class="mobile-nav-item" data-nav-id="my-pets">
      <span class="mobile-nav-icon">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
        <span class="nav-badge" style="display: none;">0</span>
      </span>
      <span class="mobile-nav-label">{{ 'general.navigation.my_pets' | t | default: 'My Pets' }}</span>
    </a>
    
    {%- comment -%} Cart - Uses Shopify's cart drawer {%- endcomment -%}
    <a href="/cart" class="mobile-nav-item" data-nav-id="cart">
      <span class="mobile-nav-icon">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <span class="nav-badge" style="display: none;">0</span>
      </span>
      <span class="mobile-nav-label">{{ 'general.navigation.cart' | t | default: 'Cart' }}</span>
    </a>
  </nav>
</simple-mobile-navigation>