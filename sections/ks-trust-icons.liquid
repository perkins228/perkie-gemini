{%- style -%}
  #ks-trust-icons-{{ section.id }} {
    padding-top: {{ section.settings.pt | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.pb | times: 0.75 | round: 0 }}px;
  }

  #ks-trust-icons-{{ section.id }} .card {
    --border-radius: {{ section.settings.card_corner_radius | divided_by: 10.0 }}rem;
    --border-width: {{ section.settings.card_border_thickness | divided_by: 10.0 }}rem;
    --border-opacity: {{ section.settings.card_border_opacity | divided_by: 100.0 }};
    --text-alignment: {{ section.settings.card_text_alignment }};
  }

  @media screen and (min-width: 750px) {
    #ks-trust-icons-{{ section.id }} {
      padding-top: {{ section.settings.pt }}px;
      padding-bottom: {{ section.settings.pb }}px;
    }
  }
{%- endstyle -%}

<div
  id="ks-trust-icons-{{ section.id }}"
  class="ks-trust-icons color-{{ section.settings.color_scheme }} gradient"
>
  {%- unless section.settings.title == blank -%}
    <div
      class="page-width"
      style="max-width: {{ section.settings.page_width | append: 'px' }}"
    >
      <div class="ks-section-header">
        {%- unless section.settings.title == blank -%}
          <h2
            class="
              title title-wrapper--no-top-margin inline-richtext
              {{ section.settings.heading_size }}
              {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}
            "
          >
            {{ section.settings.title }}
          </h2>
        {%- endunless -%}
        {%- unless section.settings.description == blank -%}
          <div class="description rte {{ section.settings.description_size }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.description }}
          </div>
        {%- endunless -%}
      </div>
    </div>
  {%- endunless -%}

  <slider-component
    class="
      slider-mobile-gutter page-width-desktop
      {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}
    "
    style="max-width: {{ section.settings.page_width | append: 'px' }}"
  >
    <ul
      id="Slider-{{ section.id }}"
      data-id="{{ section.id }}"
      class="
        grid grid--peek contains-card contains-card--standard
        grid--1-col-tablet-down
        grid--2-col-tablet
        grid--{{ section.settings.columns_desktop }}-col-desktop
        slider slider--tablet
      "
      role="list"
      data-stack-mobile="{{ section.settings.stack_mobile }}"
      aria-label="{{ section.settings.label }}"
    >
      {%- for block in section.blocks -%}
        <li
          id="Slide-{{ section.id }}-{{ forloop.index }}"
          class="grid__item slider__slide {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <div class="card-wrapper underline-links-hover">
            <div class="card card--standard">
              <div class="card__inner color-{{ section.settings.card_color_scheme }} gradient">
                <div class="card__content">
                  {% unless block.settings.img == blank %}
                    <div class="img-wrapper">
                      {% assign img_height_scaled = section.settings.item_img_height | times: 2 %}
                      <img
                        src="{{ block.settings.img | image_url: height: img_height_scaled }}"
                        class="img-fluid d-block"
                        alt="{{ block.settings.img.alt }}"
                        width="{{ section.settings.item_img_height | times: block.settings.img.aspect_ratio | round }}"
                        height="{{ section.settings.item_img_height }}"
                        loading="lazy"
                        style="height: {{ section.settings.item_img_height }}px;"
                      >
                    </div>
                  {% endunless %}
                  <div class="card__content--inner">
                    {% unless block.settings.title == blank %}
                      <h3 class="card__heading {{ section.settings.item_title_font_size }}">
                        {{ block.settings.title }}
                      </h3>
                    {% endunless %}
                    {% unless block.settings.description == blank %}
                      <div class="description rte {{ section.settings.item_description_font_size }}">
                        {{ block.settings.description }}
                      </div>
                    {% endunless %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      {%- endfor -%}
    </ul>
    <div class="slider-buttons">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter caption">
        <span class="slider-counter--current">1</span>
        <span aria-hidden="true"> / </span>
        <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
        <span class="slider-counter--total">{{ section.blocks.size }}</span>
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'general.slider.next_slide' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  </slider-component>
</div>

