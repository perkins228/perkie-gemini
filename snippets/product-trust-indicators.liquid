{% comment %}
  Product Trust Indicators
  Displays trust signals on product pages to increase conversion
{% endcomment %}

<div class="product-trust-indicators">
  <div class="trust-indicator-item">
    <span class="trust-indicator-icon">🛡️</span>
    <span class="trust-indicator-text">
      <strong>100% Satisfaction Guarantee</strong> - Love it or your money back
    </span>
  </div>
  
  <div class="trust-indicator-item">
    <span class="trust-indicator-icon">🚚</span>
    <span class="trust-indicator-text">
      <strong>Free Shipping</strong> on orders over $50
    </span>
  </div>
  
  <div class="trust-indicator-item">
    <span class="trust-indicator-icon">🎨</span>
    <span class="trust-indicator-text">
      <strong>Handcrafted with Love</strong> - Each item is made to order
    </span>
  </div>
  
  <div class="trust-indicator-item">
    <span class="trust-indicator-icon">⭐</span>
    <span class="trust-indicator-text">
      <strong>4.9/5 Rating</strong> from 2,500+ happy customers
    </span>
  </div>
</div>

<!-- Payment Security Icons -->
<div class="payment-icons-enhanced">
  <img src="{{ 'icon-visa.svg' | asset_url }}" alt="Visa" class="payment-icon">
  <img src="{{ 'icon-mastercard.svg' | asset_url }}" alt="Mastercard" class="payment-icon">
  <img src="{{ 'icon-amex.svg' | asset_url }}" alt="American Express" class="payment-icon">
  <img src="{{ 'icon-paypal.svg' | asset_url }}" alt="PayPal" class="payment-icon">
  <span style="margin-left: 12px; font-size: 13px; color: rgba(var(--color-foreground), 0.6);">
    🔒 Secure Checkout
  </span>
</div>

<!-- Trust Badges for Cart/Checkout -->
<div class="trust-badge-container" style="margin-top: 20px;">
  <div class="trust-badge">
    <div class="trust-badge-icon">🏆</div>
    <div class="trust-badge-text">Quality<br>Guaranteed</div>
  </div>
  <div class="trust-badge">
    <div class="trust-badge-icon">📦</div>
    <div class="trust-badge-text">Fast<br>Shipping</div>
  </div>
  <div class="trust-badge">
    <div class="trust-badge-icon">💳</div>
    <div class="trust-badge-text">Secure<br>Payment</div>
  </div>
  <div class="trust-badge">
    <div class="trust-badge-icon">♻️</div>
    <div class="trust-badge-text">Easy<br>Returns</div>
  </div>
</div>