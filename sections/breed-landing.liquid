          <a href="{{ section.settings.cta_url | default: '/pages/custom-image-processing' }}" class="button button--primary">
            {{ section.settings.gifts_cta_text | default: 'Preview Styles Free' }}
          </a>
        </div>
      </div>
    </section>
  {% endif %}

  {%- comment -%} ===== AVAILABLE PRODUCTS ===== {%- endcomment -%}
  {% if section.settings.products_collection != blank %}
    <section class="breed-landing__products">
      <div class="page-width">
        <h2 class="breed-landing__section-heading">{{ section.settings.products_heading | default: 'Available Products' }}</h2>
        {% if section.settings.products_subtitle != blank %}
          <p class="breed-landing__section-subtitle">{{ section.settings.products_subtitle }}</p>
        {% endif %}
        {%- assign product_ratio = section.settings.products_image_ratio -%}
        <div class="breed-landing__products-carousel-wrapper">
          <button type="button" class="breed-landing__carousel-btn breed-landing__carousel-btn--prev" aria-label="Previous products" data-carousel-prev>‚Äπ</button>
          <div class="breed-landing__products-carousel" data-products-carousel>
            {% for product in section.settings.products_collection.products limit: section.settings.products_limit %}
              <div class="breed-landing__product-card">
                <a href="{{ product.url }}" class="breed-landing__product-link">
                  {% if product.featured_image != blank %}
                    <div class="breed-landing__product-media{% if product_ratio != 'natural' %} breed-landing__product-media--{{ product_ratio }}{% endif %}">
                      {{ product.featured_image | image_url: width: 400 | image_tag:
                        alt: product.title,
                        loading: 'lazy',
                        widths: '200, 300, 400',
                        class: 'breed-landing__product-img'
                      }}
                    </div>
                  {% endif %}
                  <h3 class="breed-landing__product-title">{{ product.title }}</h3>
                  <p class="breed-landing__product-price">{{ product.price | money }}</p>
                </a>
              </div>
            {% endfor %}
          </div>
          <button type="button" class="breed-landing__carousel-btn breed-landing__carousel-btn--next" aria-label="Next products" data-carousel-next>‚Ä∫</button>
