<style>
.hiw-section {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .hiw-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.hiw-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.section-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: rgb(var(--color-foreground));
  line-height: 1.2;
}

.section-subtitle {
  text-align: center;
  font-size: 1.1rem;
  color: rgba(var(--color-foreground), 0.75);
  margin-bottom: 3rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.hiw-steps {
  display: flex;
  gap: 2rem;
  justify-content: space-between;
}

.hiw-step {
  background: #fff;
  border-radius: 12px;
  padding: 2rem 1.5rem;
  text-align: center;
  flex: 1;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  border: 2px solid transparent;
  position: relative;
}

.hiw-step:hover {
  box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  transform: translateY(-4px);
  border-color: #A3D9A5;
}

.hiw-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48px;
}

.hiw-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: rgb(var(--color-foreground));
}

.hiw-desc {
  color: rgba(var(--color-foreground), 0.75);
  font-size: 0.95rem;
  line-height: 1.5;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .hiw-container {
    padding: 2rem 1rem;
  }
  
  .section-title {
    font-size: 2rem;
  }
  
  .hiw-steps {
    flex-direction: column;
    gap: 1rem;
  }
  
  .hiw-step {
    text-align: left;
    display: flex;
    align-items: flex-start;
    padding: 1.5rem;
    border-radius: 12px;
    position: relative;
  }
  
  .hiw-icon {
    width: 56px;
    height: 56px;
    margin: 0 1rem 0 0;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
  }
  
  .hiw-content {
    flex: 1;
  }
  
  .hiw-title {
    margin-bottom: 0.5rem;
  }
  
  .hiw-desc {
    font-size: 0.9rem;
  }
  
  /* Removed - descriptions now always visible
  .hiw-step.collapsed .hiw-desc {
    display: none;
  } */
  
  /* Removed expand/collapse arrows - descriptions always visible
  .hiw-step::after {
    content: 'â–¼';
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.8rem;
    color: rgba(var(--color-foreground), 0.4);
    transition: transform 0.2s;
  }
  
  .hiw-step.active::after {
    transform: translateY(-50%) rotate(180deg);
  } */
}
</style>

<section class="hiw-section color-{{ section.settings.color_scheme }}">
  <div class="hiw-container page-width">
  {% if section.settings.heading != blank %}
    <h2 class="section-title">{{ section.settings.heading }}</h2>
  {% endif %}
  {% if section.settings.subheading != blank %}
    <p class="section-subtitle">{{ section.settings.subheading }}</p>
  {% endif %}
  
  <div class="hiw-steps">
    {% for block in section.blocks %}
      <div class="hiw-step">
        <span class="hiw-icon">
          {% if block.settings.icon_svg != blank %}
            {{ block.settings.icon_svg }}
          {% elsif block.settings.icon_image != blank %}
            <img src="{{ block.settings.icon_image | img_url: '80x80' }}" alt="" style="width:80px;height:80px;">
          {% endif %}
        </span>
        <div class="hiw-content">
          <div class="hiw-title">{{ block.settings.title }}</div>
          <div class="hiw-desc">{{ block.settings.desc }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
</section>
<script>
// Removed accordion behavior - descriptions always visible
(function() {
  // Steps are no longer clickable to expand/collapse
  function removeClickBehavior() {
    // Keep function for future use if needed
  }
  
  // Initialize mobile view - removed collapsed state
  function initMobileView() {
    if (window.innerWidth <= 768) {
      // Descriptions are now always visible
      document.querySelectorAll('.hiw-step').forEach(function(step) {
        step.classList.remove('collapsed');
      });
    } else {
      document.querySelectorAll('.hiw-step').forEach(function(step) {
        step.classList.remove('collapsed', 'active');
      });
    }
  }
  
  // Click handlers removed - descriptions always visible
  // No initialization needed - descriptions always visible
})();
</script>

