{% comment %}
  PERKIE PRINTS ‚Äî Style Landing Page Section (Hybrid)
  =====================================================
  Page body copy lives in the Shopify page editor (rich text).
  Structured visual components live here as section settings + blocks.

  SETUP:
  1. Copy this file to: sections/style-landing.liquid
  2. Add style-landing.css to: assets/style-landing.css
  3. Create one JSON template per style in templates/ (see companion files)
  4. Create Pages in Shopify Admin, assign matching template, write copy in page editor
  5. Customize visual components (hero, gallery, FAQ, etc.) via Theme Editor

  CONTENT FLOW:
  Hero ‚Üí Preview Banner ‚Üí {{ page.content }} ‚Üí Who It's For ‚Üí Gallery ‚Üí
  Why They Love It ‚Üí Lifestyle ‚Üí Products ‚Üí Comparison ‚Üí FAQ ‚Üí Final CTA
{% endcomment %}

{{ 'style-landing.css' | asset_url | stylesheet_tag }}

<div class="style-landing" style="--style-accent: {{ section.settings.accent_color }}; --style-accent-light: {{ section.settings.accent_color }}1a;">

  {%- comment -%} ===== HERO ===== {%- endcomment -%}
  <section class="style-landing__hero">
    <div class="page-width style-landing__hero-inner">
      <div class="style-landing__hero-content">
        {% if section.settings.eyebrow_text != blank %}
          <p class="style-landing__eyebrow">{{ section.settings.eyebrow_text }}</p>
        {% endif %}
        <h1 class="style-landing__title">
          {{ section.settings.heading | default: page.title }}
        </h1>
        {% if section.settings.subtitle != blank %}
          <p class="style-landing__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        <div class="style-landing__hero-ctas">
          <a href="{{ section.settings.cta_url | default: '/pages/custom-image-processing' }}" class="style-landing__cta-primary button button--primary">
            {{ section.settings.cta_text | default: 'See Your Pet in This Style ‚Äî Free' }}
          </a>
          {% if section.settings.secondary_cta_text != blank %}
            <a href="{{ section.settings.secondary_cta_url }}" class="style-landing__cta-secondary">
              {{ section.settings.secondary_cta_text }} ‚Üí
            </a>
          {% endif %}
        </div>
      </div>
      <div class="style-landing__hero-media">
        {% if section.settings.hero_image != blank %}
          {%- assign hero_ratio = section.settings.hero_image_ratio -%}
          <div class="style-landing__hero-media-inner{% if hero_ratio != 'natural' %} style-landing__hero-media-inner--{{ hero_ratio }}{% endif %}">
            {{ section.settings.hero_image | image_url: width: 800 | image_tag:
              alt: section.settings.hero_image_alt,
              loading: 'eager',
              widths: '400, 600, 800',
              class: 'style-landing__hero-img'
            }}
          </div>
          {% if section.settings.show_before_after_badge %}
            <span class="style-landing__badge">Before ‚Üí After</span>
          {% endif %}
        {% else %}
          <div class="style-landing__placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </section>

  {%- comment -%} ===== FREE PREVIEW BANNER ===== {%- endcomment -%}
  <section class="style-landing__preview-banner">
    <div class="page-width">
      <div class="style-landing__preview-banner-inner">
        <div class="style-landing__preview-icon">‚ú®</div>
        <div class="style-landing__preview-text">
          <strong>{{ section.settings.preview_banner_heading | default: 'Free Instant Preview' }}</strong>
          <span>{{ section.settings.preview_banner_text | default: 'Upload your photo and see this style applied to your pet ‚Äî no cost, no commitment.' }}</span>
        </div>
        <a href="{{ section.settings.cta_url | default: '/pages/custom-image-processing' }}" class="button button--secondary style-landing__preview-btn">
          Try It Free
        </a>
      </div>
    </div>
  </section>

  {%- comment -%} ===== PAGE BODY CONTENT (from Shopify page editor) ===== {%- endcomment -%}
  {% if page.content != blank %}
    <section class="style-landing__body">
      <div class="page-width">
        <div class="style-landing__body-content rte">
          {{ page.content }}
        </div>
      </div>
    </section>
  {% endif %}

  {%- comment -%} ===== WHO IT'S FOR ===== {%- endcomment -%}
  {% assign audience_blocks = section.blocks | where: 'type', 'audience_card' %}
  {% if audience_blocks.size > 0 %}
    <section class="style-landing__audience">
      <div class="page-width">
        <h2 class="style-landing__section-heading">{{ section.settings.audience_heading | default: "Who It's For" }}</h2>
        <div class="style-landing__audience-grid">
          {% for block in audience_blocks %}
            <div class="style-landing__audience-card" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <span class="style-landing__audience-icon">{{ block.settings.icon }}</span>
              {% endif %}
              <h3>{{ block.settings.card_title }}</h3>
              <p>{{ block.settings.card_description }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}

  {%- comment -%} ===== GALLERY ===== {%- endcomment -%}
  {% assign gallery_blocks = section.blocks | where: 'type', 'gallery_image' %}
  {% if gallery_blocks.size > 0 %}
    <section class="style-landing__gallery">
      <div class="page-width">
        <h2 class="style-landing__section-heading">{{ section.settings.gallery_heading | default: 'See It in Action' }}</h2>
        {% if section.settings.gallery_subtitle != blank %}
          <p class="style-landing__section-subtitle">{{ section.settings.gallery_subtitle }}</p>
        {% endif %}
        {%- assign gallery_ratio = section.settings.gallery_image_ratio -%}
        <div class="style-landing__gallery-grid style-landing__gallery-grid--{{ gallery_blocks.size }}">
          {% for block in gallery_blocks %}
            <div class="style-landing__gallery-item" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="style-landing__gallery-media{% if gallery_ratio != 'natural' %} style-landing__gallery-media--{{ gallery_ratio }}{% endif %}">
                  {{ block.settings.image | image_url: width: 600 | image_tag:
                    alt: block.settings.image_alt,
                    loading: 'lazy',
                    widths: '300, 450, 600',
                    class: 'style-landing__gallery-img'
                  }}
                </div>
              {% else %}
                <div class="style-landing__placeholder style-landing__placeholder--gallery{% if gallery_ratio != 'natural' %} style-landing__placeholder--{{ gallery_ratio }}{% endif %}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
              {% if block.settings.caption != blank %}
                <p class="style-landing__gallery-caption">{{ block.settings.caption }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
        <div class="style-landing__gallery-cta">
          <a href="{{ section.settings.cta_url | default: '/pages/custom-image-processing' }}" class="button button--primary">
            {{ section.settings.cta_text | default: 'See Your Pet in This Style ‚Äî Free' }}
          </a>
        </div>
      </div>
    </section>
  {% endif %}

  {%- comment -%} ===== WHY CUSTOMERS LOVE IT ===== {%- endcomment -%}
  {% assign reason_blocks = section.blocks | where: 'type', 'reason' %}
  {% if reason_blocks.size > 0 %}
